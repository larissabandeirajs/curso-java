
public class TestaCondicional {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		// sysout

		System.out.println("Testando condicionais");

		int idade = 25;
		int quantidadeDePessoas = 3;

		if (idade < 18) {
			System.out.println("Você é menor de 18 anos, não esta autorizado");

		} else {
			System.out.println("Você é maior de 18 anos");
			System.out.println("Seja Bem Vindo! ");
		}

		if (quantidadeDePessoas >= 3) {
			System.out.println("Você é menor de 18 anos, mas esta acomapnhado");

		} else {
			System.out.println("Não esta autorizado a entrar");
		}

	}

}
